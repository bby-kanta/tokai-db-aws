<% case person_kind %>
<% when 'てつや' , 1 %>
  <%= link_to "てつや", person_path(@tetsuya),{class: "btn tetsuya"} %>
<% when 'しばゆー',2 %>
  <%= link_to "しばゆー", person_path(@shibayu),{class: "btn shibayu"} %>
<% when 'りょう',3 %>
  <%= link_to "りょう", person_path(@ryo),{class: "btn ryo"} %>
<% when 'としみつ' ,4%>
  <%= link_to "としみつ", person_path(@toshimitsu),{class: "btn toshimitsu"} %>
<% when 'ゆめまる',5 %>
  <%= link_to "ゆめまる", person_path(@yumemaru),{class: "btn yumemaru"} %>
<% when '虫眼鏡',6 %>
  <%= link_to "虫眼鏡", person_path(@mushimegane),{class: "btn mushimegane"} %>
<% when 0 %>
  <%= link_to "不明", person_path(7),{class: "btn tokai"} %>
<% else %>
  <%= link_to person.name, person_path(person),{class: "btn tokai"} %>
<% end %>